<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EventPlaces.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EventPlaces"
    xmlns:pages="clr-namespace:EventPlaces.Pages"
    xmlns:eventPlaces="clr-namespace:EventPlaces.Event_Places"
    Shell.FlyoutBehavior="Flyout"
    Title="EventPlaces">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="MainPage" />

    <ShellContent
            Title="Inicio"
            ContentTemplate="{DataTemplate eventPlaces:MenuPrincipal}"
            Route="MainPage" />
    <ShellContent
            Title="Mis Reservaciones"
            ContentTemplate="{DataTemplate eventPlaces:Reservados}"
            Route="Reservados" />
    <!--<ShellContent
            Title="Mis Pagos"
            ContentTemplate="{DataTemplate pages:PagosPage}"
            Route="PagosPage" />-->

</Shell>
