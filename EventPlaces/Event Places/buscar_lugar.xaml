<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventPlaces.Event_Places.buscar_lugar"
             Title="Buscar Lugares" 
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <!-- Fondo degradado -->
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#B5D0E2" Offset="0.0" />
            <GradientStop Color="#E8D5D8" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid Padding="20" RowDefinitions="Auto, *" ColumnDefinitions="*">
        <!-- Ícono de Material Icons -->
        <Label Text="←"
       HorizontalOptions="Start"
       VerticalOptions="Start"
       FontSize="30"
       TextColor="Black"
       Margin="5,0,0,0"
       Grid.Row="0"
       Grid.Column="0">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBackButtonTapped" />
            </Label.GestureRecognizers>
        </Label>



        <!-- Encabezado con esquinas redondeadas -->
        <Frame Grid.Row="0"
       BackgroundColor="#D9BFBF"
       Padding="10"
       CornerRadius="8"
       HasShadow="True"
       HorizontalOptions="FillAndExpand"
       VerticalOptions="Start"
       HeightRequest="50" 
            Margin="10,50,10,50">
            <!-- Ajusta el margen para que sea uniforme -->
            <Label Text="Buscar Lugares"
           FontSize="16" 
                FontAttributes="Bold"
           HorizontalOptions="Center"
           VerticalOptions="Center"
           TextColor="Black" />
        </Frame>


        <!-- Contenedor principal -->
        <VerticalStackLayout Grid.Row="1" Spacing="15">
            <!-- Campo de destino -->
            <Frame BackgroundColor="#E0E0E0"  CornerRadius="10"  Padding="10">
                <HorizontalStackLayout Spacing="10">
                    <Label Text="📍" 
                           FontSize="20" 
                           VerticalOptions="Center" 
                           TextColor="Gray" />
                    <Entry Placeholder="Destino:"
                           FontSize="16"
                           TextColor="Black"
                           PlaceholderColor="Gray"
                           HorizontalOptions="FillAndExpand"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Campo de fechas -->
            <Frame BackgroundColor="#E0E0E0" CornerRadius="10" Padding="10">
                <VerticalStackLayout>
                    <Label Text="📅 Fechas" FontAttributes="Bold" FontSize="14" TextColor="Purple"/>
                    <Label x:Name="FechaLabel" Text="Seleccione la fecha de la reservacion" FontSize="14" TextColor="Black"/>
                </VerticalStackLayout>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnFechaButtonClicked" />
                </Frame.GestureRecognizers>
            </Frame>

            <!-- Campo de huéspedes (como Frame, no editable) -->
            <Frame BackgroundColor="#E0E0E0" CornerRadius="10" Padding="10">
                <VerticalStackLayout>
                    <Label Text="👤 Huespedes" FontAttributes="Bold" FontSize="14" TextColor="Purple"/>
                    <Label x:Name="HuespedesLabel" Text="Seleccione la cantidad de huespedes" FontSize="14" TextColor="Black" />
                </VerticalStackLayout>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnHuespedesClicked" />
                </Frame.GestureRecognizers>
            </Frame>


   


            <!-- Botón de buscar -->
            <Button Text="Buscar"
        FontSize="18"
        BackgroundColor="#4A90E2"
        TextColor="White"
        CornerRadius="25"
        HeightRequest="50"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="End"
        Clicked="OnBuscarButtonClicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
